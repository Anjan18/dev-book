{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"import/extensions": [
			"error",
			"always",
			{
				"js": "never"
			}
		],
		"prettier/prettier": "error",
		"no-underscore-dangle": "off",
		"no-plusplus": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js"],
				"moduleDirectory": ["node_modules", "src/"]
			}
		}
	}
}
